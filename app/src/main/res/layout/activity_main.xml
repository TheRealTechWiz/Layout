<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:layout_margin="16dp"
    android:id="@+id/image_slide_show"/>


    <!--@dimen/btn_size is in strings.xml-->
    <Button
        android:id="@+id/button_1"
        android:layout_width="@dimen/btn_size"
        android:layout_height="@dimen/btn_size"
        android:background="@drawable/button_background"
        android:text="About Pu"
        android:textColor="@color/color_black"
        android:textSize="12sp"
        android:layout_below="@id/image_slide_show"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="24dp"
        />

    <Button
        android:id="@+id/button_2"
        android:layout_width="@dimen/btn_size"
        android:layout_height="@dimen/btn_size"
        android:background="@drawable/button_background"
        android:textColor="@color/color_black"
        android:text="PU WiFi"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/image_slide_show"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/button_3"
        android:layout_width="@dimen/btn_size"
        android:layout_height="@dimen/btn_size"
        android:layout_marginTop="8dp"
        android:layout_alignParentRight="true"
        android:textColor="@color/color_black"
        android:layout_marginBottom="24dp"
        android:layout_marginRight="16dp"
        android:layout_below="@id/image_slide_show"
        android:background="@drawable/button_background"
        android:text="Gallery"
        android:textSize="12sp" />


    <Button
        android:id="@+id/button_4"
        android:layout_width="@dimen/btn_size"
        android:layout_height="@dimen/btn_size"
        android:background="@drawable/button_background"
        android:layout_marginTop="6dp"
        android:layout_below="@id/button_1"
        android:text="Important forms"
        android:textColor="@color/color_black"
        android:textSize="12sp"
        android:layout_marginLeft="16dp"/>

    <Button
        android:id="@+id/button_5"
        android:layout_width="@dimen/btn_size"
        android:layout_height="@dimen/btn_size"
        android:layout_below="@id/button_2"
        android:background="@drawable/button_background"
        android:text="Emergency Contacts"
        android:textColor="@color/color_black"
        android:layout_marginLeft="24dp"
        android:layout_alignBaseline="@id/button_4"
        android:layout_centerHorizontal="true"
        android:textSize="12sp" />

    <Button
        android:id="@+id/button_6"
        android:layout_width="@dimen/btn_size"
        android:layout_height="@dimen/btn_size"
        android:textColor="@color/color_black"
        android:layout_marginRight="16dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/button_3"
        android:background="@drawable/button_background"
        android:text="Committees"
        android:layout_alignBaseline="@id/button_5"
        android:textSize="10sp" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.design.widget.BottomNavigationView>


</RelativeLayout>